size 12 4 4 12  # Nt Nx Ny Nz

# parallel tempering parameters (ONLY PARALLEL TEMPERING RUNS)
defect_dir    1                # choose direction of defect boundary: 0->t, 1->x, 2->y, 3->z
defect_size   2 2 2            # defect sizes along dirs orthogonal to <defect_dir>, ordered from 0 to 3 (skipping the <defect_dir> direction)
N_replica_pt  2   1.0 0.0          # number of parallel tempering replica ___ boundary conditions coefficients

# twist parameters
k_twist 0 0 0 1 0 0 # twist parameter on the plane (0,1), (0,2), ..., (0,STDIM-1), (1, 2), ...

# hierarchical update parameters (ONLY PARALLEL TEMPERING RUNS): num of hierarc levels ___ extension of rectangles ___ num of sweeps per rectangle
hierarc_upd 1	3	10

# multicanonic parameters (ONLY MULTICANONIC RUNS)
grid_step             0.05
grid_max              5.0
topo_potential_file   ToPotential

# Simulation parameters
beta       6.2
theta      0.0
sample     10
thermal    0
overrelax  5
measevery  1
randseed   0      # (0=time)

start                    3     # 0=ordered  1=random  2=from saved configuration
saveconf_back_every      1     # if 0 does not save, else save backup configurations every ... updates
saveconf_analysis_every  1     # if 0 does not save, else save configurations for analysis every ... updates

# for gradient flow evolution
gfstep      0.01     # integration step for gradient flow\n");
num_gfsteps 100      # number of integration steps for gradient flow\n");
gf_meas_each 20       # compute observables every <gfstep_each> integration steps during the gradient flow\n"

# cooling
coolsteps             0   # number of cooling steps to be used
coolrepeat            0  # number of times <coolsteps> are repeated (=> <coolsteps> * <coolrepeat> cooling steps are done, cool meas taken every <coolsteps> steps)

# measures            1 = YES = compute, 0 = NO = do not compute
plaquette_meas        1
